@{
    var unreadMessageCount = ViewBag.UnreadMessageCount as int? ?? 0; // Retrieve unread message count
}
<h2>Your Inbox (@unreadMessageCount unread)</h2>
@model List<Message>

<h2>Your Inbox</h2>
<table style="border-collapse: collapse; width: 100%;">
    <thead>
        <tr style="border-bottom: 2px solid black;">
            <th style="padding: 10px; border-right: 1px solid black;">Sender</th>
            <th style="padding: 10px; border-right: 1px solid black;">Message</th>
            <th style="padding: 10px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr style="border-bottom: 1px solid black;">
                <td style="padding: 10px; border-right: 1px solid black;">
                    @if (message.Sender != null)
                    {
                        @Html.Raw(message.IsAnonymous ? "Anonymous" : message.Sender.UserName)
                    }
                </td>

                <td style="padding: 10px; border-right: 1px solid black;">@message.MessageText</td>
                <td style="padding: 10px;">
                    @if (!message.IsRead)
                    {
                        <a href="@Url.Action("MarkAsRead", new { messageId = message.MessageId })">Mark as Read</a>
                    }
                    else
                    {
                        <p>Message Read</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

