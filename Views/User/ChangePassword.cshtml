@using CVProjekt1._0.ViewModels;
@model UserChangePasswordViewModel

<form asp-controller="User" asp-action="ChangePassword" method="post">
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Old Password:</label>
        </div>
        <div class="col-sm-4">
            <input type="password" asp-for="OldPassword" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>New Password:</label>
        </div>
        <div class="col-sm-4">
            <input type="password" asp-for="NewPassword" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Confirm New Password:</label>
        </div>
        <div class="col-sm-4">
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Change Password</button>
</form>
