@using Microsoft.AspNetCore.Identity
@{
    ViewBag.Title = "User Profile";
}
@model CVProjekt1._0.ViewModels.VisitProfileViewModel;
@inject UserManager<User> _userManager;

@{
    var currentUser = _userManager.GetUserId(User);
    var successMessage = TempData["SuccessMessage"] as string;
    var user = await _userManager.FindByNameAsync(Model.UserName);
    var profilePicturePath = user?.ProfilePicturePath;
}


@if (currentUser != Model.UserId)
{
    <form asp-controller="Message" asp-action="SendMessage" asp-route-id="@Model.UserName" method="post">
        <div class="row">
            <div class="col-md-6">
                <h2>Send a message</h2>
                <textarea asp-for="Message" class="form-control small-textarea"></textarea>

                <div class="form-check">
                    <input asp-for="IsAnonymous" class="form-check-input" type="checkbox" id="IsAnonymous" />
                    <label class="form-check-label" for="IsAnonymous">Send anonymously</label>
                </div>

                <button type="submit" class="btn btn-primary">Send Message</button>

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success">
                        @successMessage
                    </div>
                }
            </div>
        </div>
    </form>

}


