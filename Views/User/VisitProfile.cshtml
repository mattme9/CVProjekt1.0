@using Microsoft.AspNetCore.Identity
@{
    ViewBag.Title = "User Profile";
}
@inject UserManager<User> _userManager;

@{
    var currentUser = _userManager.GetUserId(User);
}

@model CVProjekt1._0.ViewModels.VisitProfileViewModel;


@if(currentUser != Model.UserId)
{
        <div class="row">
            <div class="col-md-6">
                <h2>Send a message</h2>
                <textarea asp-for="Message" class="form-control small-textarea"></textarea>
                <form asp-action="SendMessage" asp-controller="User">
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>

}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 bg-body-tertiary text-center overflow-hidden">
            <div class="my-3 p-3">
                <h2 class="display-5">Resume</h2>
            </div>
            <div class="bg-body shadow-sm mx-auto d-flex align-items-center justify-content-center" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;">
                @if(Model.Resume != null)
                {
                    <p style="color: white">@Model.Resume.Description</p>
                }
            </div>
        </div>
    </div>
</div>

