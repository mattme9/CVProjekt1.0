@model CVProjekt1._0.Models.Resume

@{
    ViewBag.Title = "Create Resume";
}

<style>
    .form-control-linebreak {
        white-space: pre-line;
    }
</style>

<h2>Create a New Resume</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

@using (Html.BeginForm("Create", "Resume", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <label>Education:</label>
            <textarea asp-for="Education" class="form-control" style="height: 10rem;"></textarea>
        </div>
    </div>

    <button type="submit" name="action" value="AddEducation" class="btn btn-primary mt-2">Save education</button>

    <div class="row">
        <div class="col-md-12">
            <label>Experience:</label>
            <textarea asp-for="Experience" class="form-control" style="height: 10rem;"></textarea>
        </div>
    </div>

    <button type="submit" name="action" value="AddExperience" class="btn btn-primary mt-2">Save experience</button>

    <div class="row">
        <div class="col-md-12">
            <label>Skills:</label>
            <textarea asp-for="Skill" class="form-control" style="height: 10rem;"></textarea>
        </div>
    </div>

    <button type="submit" name="action" value="AddSkill" class="btn btn-primary mt-2">Save skills</button>

    <div class="row">
        <div class="col-md-12">
            <label>About me:</label>
            <textarea asp-for="Description" class="form-control" style="height: 15rem;"></textarea>
        </div>
    </div>

    <button type="submit" name="action" value="SaveAboutMe" class="btn btn-primary mt-2">Save about me</button>

    <a class="nav-link text-dark" asp-area="" asp-controller="Resume" asp-action="Index">Return to resume</a>
}
