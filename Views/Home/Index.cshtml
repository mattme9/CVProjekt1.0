@{
    ViewData["Title"] = "Home Page";
}

@using CVProjekt1._0.ViewModels;
@model HomePageViewModel;

<div class="py-5 text-center">
    <h2>Discover A Variety Of Resumes</h2>
    <p class="lead">Browse through a collection of unique and skillful resumes. Each resume showcases individual expertise, experiences, and accomplishments. Discover the diverse talents and qualifications presented by our users.</p>
</div>

<div class="row mb-2">
    @foreach (var resume in Model.SelectedResumes)
    {
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-primary">Resume</strong>
                    <h3 class="mb-0">
                        <a class="text-dark" href="#"></a>
                    </h3>
                    <div class="mb-1 text-muted">Nov 12</div>
                    <p class="card-text mb-auto">@resume.Description</p>
                    <ul>
                        @foreach (var skill in resume.Skills)
                        {
                            <li>@skill.SkillName: @skill.SkillDescription</li>
                        }
                    </ul>
                </div>
                <img class="card-img-right flex-auto d-none d-md-block" 
                       src="resume.User.ProfilePicturePath" 
                  data-src="holder.js/200x250?theme=thumb" 
                       alt="Card image cap">
                    
            </div>
        </div>
    }
</div>

<h2>Most Recent Project</h2>
<p>Title: @Model.LatestProject.Title</p>
<p>Description: @Model.LatestProject.Description</p>
